.weui-toptips_show.weui-toptips {
  display: block;
}
.weui-toptips_show {
  -webkit-transform: translateZ(0) translateY(0);
  transform: translateZ(0) translateY(0);
  opacity: 1;
}
.weui-toptips_success {
  background-color: greenyellow;
}
.weui-toptips_error {
  background-color: red;
}
.weui-toptips_info {
  background-color: blue;
}